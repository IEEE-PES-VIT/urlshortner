<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="my-1 mx-2">
        <h1>URL SHRINKER</h1>
        <Form action="/shortUrls" method="POST" class="my-4">
            <label for="fullUrl" class="sr-only">URL</label>
            <input type="url" name="fullurl" placeholder="URL" id="fullurl" class="form-control mr-2">
            <button type="submit" class="btnm btn-success">Shrink</button>
        </Form>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>click</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(function(shortUrl){  %>
                    <tr>
                        <td><a href="<%=shortUrl.full %>"><%=shortUrl.full%></a> </td>
                        <td><a href="<%=shortUrl.short %>"><%=shortUrl.short%></a></td>
                        <td><%=shortUrl.clicks%></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</body>
</html>
